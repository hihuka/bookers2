<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,ul:'/books',method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :opinion %><br>

  <%= f.submit 'Create Book' %></br>

<% end %>

<h2>Books</h2>
<table>
   <thead>
      <tr>
        <th>Title</th>
        <th>opinion</th>
        <th colspan="3"></th>
      </tr>
   </thead>
<% @books.each do |book| %>
   <tbody>
      <tr>
        <td><%=book.title%></td>
        <td><%=book.opinion%></td>
      </tr>
   </tbody>
   <% end %>
</table>
