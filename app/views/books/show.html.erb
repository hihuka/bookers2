<div class="container ">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
    <div class="col-md-3">
     <h2>User info</h2>
     <%= render 'users/user', user: @user %>
     <h2 class="mt-3">New book</h2>
     <%= render 'book', book: @books%>
    </div>
   <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
   <table class="table table-striped">
     <tr>
       <td><%= link_to user_path(@user.id) do %>
         <%= image_tag @user.get_profile_image(100,100) %><br>
          <%= @user.name %></br>
         <% end %>
       </td>

     <td><%= link_to @book.title,book_path(@book.id) %></td>

     <td><%= @book.body %></td>

     <td>
      <% if @book.user == current_user %>
      <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
      <% end %>
     </td>
     <td>
      <% if @book.user == current_user %>
      <%= link_to "Destroy", book_path(@book.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% end %>
     </td>
    </tr>
  </table>
</div>
</div>
</div>