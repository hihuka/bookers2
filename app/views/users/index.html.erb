<h1>User Info</h1>


  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "width,height" %>
  <% else %>
    <%= image_tag 'default-image.jpg', size: "width,height" %>
  <% end %>

  <p>name</p>
  <span><%= @user.name %></span>

  <p>introduction</p>
  <span><%= @user.introduction %></span>

<h2>Users</h2>
<table class="table table-striped">
   <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
   </thead>
<% @users.each do |user| %>
   <tbody>
      <tr>
        <td><%= image_tag 'default-image.jpg', size: "width,height" %></td>
        <td></td>
      </tr>
   </tbody>
   <% end %>
</table>