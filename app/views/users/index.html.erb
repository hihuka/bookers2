<%= form_with model: @user,ul:'users/:id' ,method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>

<h2>Users</h2>
<table>
   <thead>
      <tr>
        <th>Title</th>
        <th>opinion</th>
        <th colspan="3"></th>
      </tr>
   </thead>
<% @users.each do |user| %>
   <tbody>
      <tr>
        <td><%= image_tag 'default-image.jpg', size: "width,height" %></td>
        <td><%=user.name%></td>
      </tr>
   </tbody>
   <% end %>
</table>