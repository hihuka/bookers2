<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
<% if @user.errors.any? %>
  <h4><%= @user.errors.count %>errors prohibited this user from being saved</h4>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user,url: user_path(@user.id), method: :patch do |f| %>

  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Image</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <h4>introduction</h4>
  <%= f.text_area :introduction %><br>

  <%= f.submit 'Update User' %></br>

<% end %>


 </div>
</div>
</div>

