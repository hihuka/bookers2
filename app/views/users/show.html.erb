<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
  <div class="col-md-4">
    <%= render 'user', user: @user %>
    <%= render 'books/book', book: @book %>
  </div>
<div class="col-md-8">
  <h2>Books</h2>
<div class="container">
  <div class="row">
   <table class="table table-striped">
     <thead>
        <tr>
          <th colspan="3"></th>
           </td>
          <th>Title</th>
          <th>opinion</th>
        </tr>
      </thead>

      <% @users.each do |user| %>
        <tbody>
        <tr>
          <td>
          <% if user.profile_image.attached? %>
          <%= image_tag user.profile_image, size: "width,height" %>
          <% else %>
          <%= image_tag 'no_image.jpg', size: "width,height" %>
          <% end %>
          </td>
          <td>
            <%= link_to book.title,book_path(book.id) %>
          </td>
          <td><%= book.opinion %></td>
        </tr>
      </tbody>
      <% end %>
   </table>
  </div>
</div>
</div>